    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node16",
    "declaration": true,
    "outDir": "./lib/cjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/*"]
}
